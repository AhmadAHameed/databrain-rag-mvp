# Development Environment Configuration with Mocks Enabled
# Copy this to .env.local for local development with mocks

# Backend API Configuration
# For containerized environments, use the backend service name
VITE_API_BASE_URL=http://backend:8000

# Development settings
VITE_APP_NAME=DataBrain
VITE_APP_VERSION=0.0.1-dev

# Development/Mocking Mode - Backend serves fast mock responses instead of slow generative model
VITE_USE_MOCKS=false

# Mock API Configuration
VITE_MOCK_API_DELAY=800
